<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p><%="[X] This task has been completed " %></p>
<% else %>
  <p><%="[ ] This task has not been completed yet" %></p>
<% end %>

<%= link_to "Back to list", tasks_path %>

<%= link_to "Edit", edit_path %>

<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>


